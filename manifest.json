{
  "manifest_version": 2,

  "name": "Jisho Chrome Search",
  "description": "This extension allows for easy searching of Jisho.org",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab",
   "contextMenus"
   ],
  "background": {
    "scripts": ["script.js"]
  }
}